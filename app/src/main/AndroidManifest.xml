<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.card_quiz_game_dhana7">

<!--    All App Activities are defined here-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/clapperboard"
        android:label="@string/app_name"
        android:roundIcon="@drawable/clapperboard"
        android:supportsRtl="true"
        android:theme="@style/Theme.Card_quiz_game_dhana7">
        <activity android:name="com.example.card_quiz_game_dhana7.ShowResult"></activity>
        <activity android:name="com.example.card_quiz_game_dhana7.ScoreStats"></activity>
        <activity android:name="com.example.card_quiz_game_dhana7.Quiz" />
        <activity android:name="com.example.card_quiz_game_dhana7.GameRules" />
        <activity android:name="com.example.card_quiz_game_dhana7.Login" />
        <activity android:name="com.example.card_quiz_game_dhana7.Register" />
<!--        The launcher activity-->
        <activity android:name="com.example.card_quiz_game_dhana7.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.card_quiz_game_dhana7.MainActivity" />
    </application>

</manifest>